{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "game_configs",
  "info": {
    "name": "GameConfig",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "game": {
      "model": "game",
      "via": "game_configs"
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 50,
      "regex": "[a-zA-Z0-9\\s]+"
    },
    "startup_script": {
      "type": "text",
      "required": true
    },
    "server_config": {
      "type": "text",
      "required": true
    },
    "game_deployments": {
      "collection": "game-deployment",
      "via": "game_config"
    }
  }
}
