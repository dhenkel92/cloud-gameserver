{
  "kind": "collectionType",
  "connection": "default",
  "collectionName": "game_configs",
  "info": {
    "name": "GameConfig",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "game": {
      "via": "game_configs",
      "model": "game"
    },
    "name": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 50,
      "regex": "[a-zA-Z0-9\\s]+"
    },
    "game_deployments": {
      "collection": "game-deployment",
      "via": "game_config"
    },
    "configuration": {
      "type": "json",
      "required": true
    },
    "game_servers": {
      "via": "game_config",
      "collection": "game-server"
    }
  }
}
