{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ListAndUploadPubBucket",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:ListBucket",
                "s3:DeleteObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
                "${ bucket_arn }",
                "${ bucket_arn }/*"
            ]
        }
    ]
}